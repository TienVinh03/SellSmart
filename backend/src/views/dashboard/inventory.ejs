        // Xử lý khi submit form
        $('#saveBatchBtn').click(function() {
            const batchInfo = {
                batch_number: $('#batchNumber').val(),
                import_date: $('#batchDate').val(),
                provider_id: $('.product-provider').first().val(),
                note: $('#batchNote').val()
            };

            const products = [];

            $('.product-item').each(function() {
                const $product = $(this);
                const hasVariants = $product.find('.has-variants').is(':checked');
                
                const productData = {
                    product_name: $product.find('.product-name').val(),
                    typeProduct_id: $product.find('.product-category').val(),
                    product_description: '',
                    unit: 'cái',
                    hasVariants: hasVariants,
                    note: $product.find('.product-note').val() || ''
                };

                if (hasVariants) {
                    // Lấy dữ liệu biến thể
                    const variants = [];
                    $product.find('.variant-combination').each(function() {
                        const $combination = $(this);
                        const variantData = JSON.parse($combination.find('input[name^="variant_combinations"][name$="[variants]"]').val() || '[]');
                        const price = parseFloat($combination.find('.variant-price').val());
                        const quantity = parseFloat($combination.find('.variant-quantity').val() || $product.find('.product-quantity').val());

                        if (variantData && price && quantity) {
                            variants.push({
                                variants: variantData,
                                price: price,
                                quantity: quantity
                            });
                        }
                    });

                    if (variants.length > 0) {
                        productData.variants = variants;
                        // Tính tổng số lượng và giá
                        productData.quantity = variants.reduce((sum, v) => sum + v.quantity, 0);
                        productData.price = variants.reduce((sum, v) => sum + (v.price * v.quantity), 0) / productData.quantity;
                    }
                } else {
                    productData.quantity = parseFloat($product.find('.product-quantity').val());
                    productData.price = parseFloat($product.find('.product-price').val());
                }

                products.push(productData);
            });

            // Kiểm tra dữ liệu trước khi gửi
            if (!batchInfo.batch_number || !batchInfo.import_date || !batchInfo.provider_id) {
                showErrorToast('Vui lòng điền đầy đủ thông tin lô hàng');
                return;
            }

            if (products.length === 0) {
                showErrorToast('Vui lòng thêm ít nhất một sản phẩm');
                return;
            }

            // Kiểm tra từng sản phẩm
            let isValid = true;
            products.forEach((product, index) => {
                if (!product.product_name || !product.typeProduct_id) {
                    showErrorToast(`Vui lòng điền đầy đủ thông tin cho sản phẩm ${index + 1}`);
                    isValid = false;
                    return false;
                }

                if (product.hasVariants) {
                    if (!product.variants || product.variants.length === 0) {
                        showErrorToast(`Vui lòng thêm ít nhất một biến thể cho sản phẩm ${index + 1}`);
                        isValid = false;
                        return false;
                    }
                } else {
                    if (!product.quantity || !product.price) {
                        showErrorToast(`Vui lòng điền đầy đủ số lượng và giá cho sản phẩm ${index + 1}`);
                        isValid = false;
                        return false;
                    }
                }
            });

            if (!isValid) return;

            // Gửi dữ liệu lên server
            $.ajax({
                url: '/inventory/batch-import',
                method: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({
                    batchInfo: batchInfo,
                    products: products
                }),
                success: function(response) {
                    try {
                        if (response.status === 'Success' || response.status === 'Ok') {
                            showSuccessToast('Nhập lô hàng thành công');
                            setTimeout(() => {
                                $('#batchImportModal').modal('hide');
                                location.reload();
                            }, 1500);
                        } else {
                            showErrorToast(response.message || 'Có lỗi xảy ra khi nhập lô hàng');
                        }
                    } catch (error) {
                        console.error('Error handling success response:', error);
                        alert('Nhập lô hàng thành công'); // Fallback message
                        setTimeout(() => {
                            $('#batchImportModal').modal('hide');
                            location.reload();
                        }, 1500);
                    }
                },
                error: function(xhr) {
                    try {
                        const errorMessage = xhr.responseJSON?.message || 'Có lỗi xảy ra khi nhập lô hàng';
                        showErrorToast('Lỗi: ' + errorMessage);
                    } catch (error) {
                        console.error('Error handling error response:', error);
                        alert('Lỗi: ' + (xhr.responseJSON?.message || 'Có lỗi xảy ra khi nhập lô hàng'));
                    }
                }
            });
        });

